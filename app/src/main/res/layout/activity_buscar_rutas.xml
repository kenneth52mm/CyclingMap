<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.cyclingmap.orion.cyclingmap.activities.BuscarRutas">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/greenLight"
        android:elevation="4dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ToolbarTheme" >
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/busqueda_head"
            android:id="@+id/txtRut_Buscar_Enca"
            android:layout_marginBottom="10dp"
            android:height="40dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/md_white_1000"
            android:layout_marginTop="10dp" />
    </android.support.v7.widget.Toolbar>
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/tabla1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/top_buscar"
            android:layout_marginBottom="@dimen/bottom_layout_one">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageView"
                    android:src="@mipmap/ic_distanc"
                    android:layout_marginLeft="@dimen/imgview_margin_left" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/detalles_distancia"
                    android:textColor="#ff5a5757"
                    android:id="@+id/textView5"
                    android:layout_marginTop="10dp"
                    android:textSize="@dimen/text_size_search"
                    android:layout_marginLeft="@dimen/textview_margin_left" />
                <EditText
                    android:layout_width="@dimen/textview_number"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/txt_distance_search"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="@dimen/edittext_margin_left"
                    android:textSize="@dimen/text_size_search" />
            </LinearLayout>
        </TableRow>
        <View
            android:layout_width="wrap_content"
            android:background="@drawable/gradient"
            android:layout_height="1dp"></View>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/top_layout_search">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView1"
                    android:src="@mipmap/ic_level_exp"
                    android:layout_marginLeft="@dimen/imgview_margin_left" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/detalles_nivel"
                    android:id="@+id/txt"
                    android:textColor="#ff5a5757"
                    android:layout_marginLeft="@dimen/textview_margin_left"
                    android:textSize="@dimen/text_size_search"
                    android:layout_marginTop="10dp" />
                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinnerLevel"
                    android:spinnerMode="dialog"
                    android:layout_marginLeft="@dimen/spiner_margin_left"
                    android:layout_marginTop="10dp"
                    android:touchscreenBlocksFocus="true" />
            </LinearLayout>
        </TableRow>
        <View
            android:layout_width="wrap_content"
            android:background="@drawable/gradient"
            android:layout_height="1dp"></View>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginTop="@dimen/check_top">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginTop="@dimen/top_layout_search">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/near_of_me"
                    android:id="@+id/check_nearest"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/checkbox_margin_left"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                    android:textColor="#ff757575"
                    android:checked="false"
                    android:textSize="@dimen/text_size_search" />
            </LinearLayout>
        </TableRow>
    </TableLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom ="@id/tabla1"
        android:gravity="center"
        android:id="@+id/linearLayout7">
        <Button
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:text="@string/btn_rutas_buscar_lblboton"
            android:background="@color/greenDark"
            android:id="@+id/btnRutas_Buscar"
            android:onClick="routesSearch"
            android:textColor="#ffffffff"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/button_padding"
            android:layout_marginLeft="@dimen/button_padding"
            android:textSize="@dimen/text_button_search" />
    </LinearLayout>
</RelativeLayout>
