<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    tools:context="com.cyclingmap.orion.cyclingmap.activities.DetallesRuta">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/greenLight"
        android:elevation="4dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ToolbarTheme" >

        <TextView
            android:id="@+id/txt_Ruta_Detalle_Encabez"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/detalle_ruta_Encabezado"
            android:textSize="20dp"
            android:textColor="#fffffdfe" />
    </android.support.v7.widget.Toolbar>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:layout_marginTop="60dp">

            <ImageView
                android:id="@+id/ivRuta_Detalle"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_column="0"
                android:layout_gravity="left"
                android:layout_marginBottom="5dp"
                android:layout_span="3"
                android:src="@drawable/ejrutadetalle1" />
        </TableRow>
        <View
            android:layout_width="wrap_content"
            android:background="@drawable/gradient"
            android:layout_height="1dp"></View>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="left"
                    android:src="@drawable/nombre"
                    android:layout_marginLeft="15dp" />

                <TextView
                    android:id="@+id/txtRuta_Det_Nombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="@string/name_det_r"
                    android:textSize="@dimen/lbl_text_size"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:id="@+id/txtNameRoad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>

        </TableRow>
        <View
            android:layout_width="wrap_content"
            android:background="@drawable/gradient"
            android:layout_height="1dp"></View>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:src="@mipmap/ic_distanc"
                    android:layout_marginLeft="15dp" />

                <TextView
                    android:id="@+id/txtRuta_Det_Distancia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:text="@string/distance_det_r"
                    android:textSize="18dp"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:id="@+id/txtDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>
        </TableRow>
        <View
            android:layout_width="wrap_content"
            android:background="@drawable/gradient"
            android:layout_height="1dp"></View>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:src="@mipmap/ic_speedavg"
                    android:layout_marginLeft="15dp" />

                <TextView
                    android:id="@+id/txtRutas_Det_Vel_Media"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:text="@string/speed_det_r"
                    android:textSize="18dp"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:id="@+id/txtSpeedAveg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>

        </TableRow>
        <View
            android:layout_width="wrap_content"
            android:background="@drawable/gradient"
            android:layout_height="1dp"></View>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:src="@mipmap/ic_level_exp"
                    android:layout_marginLeft="15dp" />

                <TextView
                    android:id="@+id/txtRuta_Det_Nivel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:text="@string/level_det_r"
                    android:textSize="18dp"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:id="@+id/txtNivelRoad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>
        </TableRow>

        <!--  <TableRow
              android:layout_width="fill_parent"
              android:layout_height="wrap_content">

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="horizontal">

                  <ImageView
                      android:id="@+id/imageView8"
                      android:layout_width="45dp"
                      android:layout_height="45dp"
                      android:layout_gravity="left"
                      android:src="@drawable/tipocalle" />

                  <TextView
                      android:id="@+id/txtRuta_Det_TipCalle"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="10dp"
                      android:text="@string/detalles_tipocalle"
                      android:textSize="18dp" />

                  <TextView
                      android:id="@+id/txtRoadType"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="18dp" />
              </LinearLayout>
          </TableRow> -->

    </TableLayout>

    <Button
        android:id="@+id/btnRuta_Det_Play"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:background="@color/greenLight"
        android:text="@string/btn_ruta_detalle"
        android:textColor="#ffffffff"
        android:textStyle="bold" />

</RelativeLayout>
