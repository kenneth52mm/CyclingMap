<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    tools:context="com.cyclingmap.orion.cyclingmap.activities.DetallesRuta">
    <fragment
        android:id="@+id/mapDetalle"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/height_map"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp" />
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height"
        android:orientation="horizontal"
        android:id="@+id/linearLayout0"
        android:layout_below="@+id/mapDetalle"
        android:layout_alignRight="@+id/mapDetalle"
        android:layout_alignEnd="@+id/mapDetalle"
        android:layout_marginTop="@dimen/table_top">
        <ImageView
            android:id="@+id/imageView613"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:src="@mipmap/ic_place"
            android:layout_marginLeft="@dimen/img_titles_margin_left" />
        <TextView
            android:id="@+id/txtRuta_Det_Prov_Town"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="@dimen/img_titles_margin_left"
            android:text="@string/place_route"
            android:textSize="@dimen/text_size"
            android:layout_marginTop="@dimen/text_top_det"
            android:textColor="#ff5a5757" />
        <TextView
            android:id="@+id/TxtProvince"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_2"
            android:layout_marginTop="@dimen/text_top_det"
            android:layout_marginLeft="@dimen/data_text_left"
            android:textColor="#ff000000" />
        <TextView
            android:id="@+id/TxtTown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_2"
            android:layout_marginTop="@dimen/text_top_det"
            android:layout_marginLeft="@dimen/data_text_left"
            android:textColor="#ff000000" />
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:background="@drawable/gradient"
        android:layout_height="1dp"
        android:layout_below="@+id/linearLayout0"
        android:layout_alignRight="@+id/mapDetalle"
        android:layout_alignEnd="@+id/mapDetalle"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height"
        android:orientation="horizontal"
        android:id="@+id/linearLayout11"
        android:layout_below="@+id/linearLayout0"
        android:layout_alignRight="@+id/mapDetalle"
        android:layout_alignEnd="@+id/mapDetalle"
        android:layout_marginTop="@dimen/table_top">
        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:src="@mipmap/ic_distanc"
            android:layout_marginLeft="@dimen/img_titles_margin_left" />
        <TextView
            android:id="@+id/txtRuta_Det_Distancia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="@dimen/img_titles_margin_left"
            android:text="@string/distance_det_r"
            android:textSize="@dimen/text_size"
            android:layout_marginTop="@dimen/text_top_det"
            android:textColor="#ff5a5757" />
        <TextView
            android:id="@+id/TxtDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_2"
            android:layout_marginTop="@dimen/text_top_det"
            android:layout_marginLeft="@dimen/data_text_left" />
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:background="@drawable/gradient"
        android:layout_height="1dp"
        android:layout_below="@+id/linearLayout11"
        android:layout_alignRight="@+id/mapDetalle"
        android:layout_alignEnd="@+id/mapDetalle"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height"
        android:orientation="horizontal"
        android:id="@+id/linearLayout12"
        android:layout_below="@+id/linearLayout11"
        android:layout_alignLeft="@+id/mapDetalle"
        android:layout_alignStart="@+id/mapDetalle"
        android:layout_marginTop="@dimen/table_top">
        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:src="@mipmap/ic_duration"
            android:layout_marginLeft="@dimen/data_text_left" />
        <TextView
            android:id="@+id/txtRutas_Det_Vel_Media"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="@dimen/img_titles_margin_left"
            android:text="@string/duration_det"
            android:textSize="@dimen/text_size"
            android:layout_marginTop="@dimen/text_top_det"
            android:textColor="#ff5a5757" />
        <TextView
            android:id="@+id/TxtDurationDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_2"
            android:layout_marginTop="@dimen/text_top_det"
            android:layout_marginLeft="@dimen/data_text_left" />
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:background="@drawable/gradient"
        android:layout_height="1dp"
        android:layout_below="@+id/linearLayout12"
        android:layout_alignRight="@+id/mapDetalle"
        android:layout_alignEnd="@+id/mapDetalle"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height"
        android:orientation="horizontal"
        android:layout_below="@+id/linearLayout12"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/table_top">
        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:src="@mipmap/ic_level_exp"
            android:layout_marginLeft="@dimen/img_titles_margin_left" />
        <TextView
            android:id="@+id/txtRuta_Det_Nivel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/img_titles_margin_left"
            android:text="@string/level_det_r"
            android:textSize="@dimen/text_size"
            android:layout_marginTop="@dimen/text_top_det"
            android:textColor="#ff5a5757" />
        <TextView
            android:id="@+id/TxtNivelRoad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_2"
            android:layout_marginTop="@dimen/text_top_det"
            android:layout_marginLeft="@dimen/data_text_left" />
    </LinearLayout>
    <Button
        android:id="@+id/btnRuta_Det_Play"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:background="@color/greenDark"
        android:text="@string/btn_ruta_detalle"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:onClick="beginRoute"
        android:layout_marginRight="@dimen/button_padding"
        android:layout_marginLeft="@dimen/button_padding"
        android:textSize="@dimen/text_size_button_det" />
</RelativeLayout>
