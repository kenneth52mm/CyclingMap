<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    tools:context="com.cyclingmap.orion.cyclingmap.activities.ProfileUserActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar_kitkat_height"
        android:background="?colorPrimary" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_marginTop="@dimen/status_bar_margin_top"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ToolbarTheme" />

    <RelativeLayout
        android:id="@+id/nav_header_container"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/container_height"
        android:layout_alignParentTop="true"
        android:layout_column="0"
        android:layout_marginTop="@dimen/container_top"
        android:layout_row="0"
        android:background="@color/greenLight">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/image_user"
            android:layout_height="@dimen/image_user"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/textpr_margin_left"
            android:layout_marginStart="34dp"
            android:scaleType="fitStart"
            android:src="@drawable/ic_profile" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_pr"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/nav_header_container"
        android:layout_marginTop="@dimen/layout_top_first"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/textpr_margin_left"
            android:layout_marginTop="@dimen/textpr_margin_top"
            android:text="@string/name_user"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000"
            android:textSize="@dimen/text_size_pr" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/txtUsernameProfile"
            android:layout_marginLeft="@dimen/text_left_data"
            android:layout_marginTop="@dimen/textpr_margin_top"
            android:textSize="@dimen/text_size_pr" />

    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:background="@drawable/gradient"
        android:layout_height="1dp"
        android:layout_below="@+id/linearLayout1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></View>
    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_pr"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout2"
        android:orientation="horizontal"
        android:showDividers="beginning"
        android:layout_marginTop="@dimen/layout_top_pr">

        <TextView
            android:id="@+id/txt_label_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/textpr_margin_left"
            android:layout_marginTop="@dimen/textpr_margin_top"
            android:text="@string/weight_user"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000"
            android:textSize="@dimen/text_size_pr" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/txtWeight"
            android:layout_marginLeft="@dimen/text_left_data"
            android:layout_marginTop="@dimen/textpr_margin_top"
            android:textSize="@dimen/text_size_pr" />

    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:background="@drawable/gradient"
        android:layout_height="1dp"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></View>
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_pr"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout1"
        android:orientation="horizontal"
        android:showDividers="beginning"
        android:layout_marginTop="@dimen/layout_top_pr">

        <TextView
            android:id="@+id/txtQFriends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/textpr_margin_left"
            android:layout_marginTop="@dimen/textpr_margin_top"
            android:text="@string/email_user"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000"
            android:textSize="@dimen/text_size_pr" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/txtEmailProfile"
            android:layout_marginLeft="@dimen/text_left_data"
            android:layout_marginTop="@dimen/textpr_margin_top"
            android:textSize="@dimen/text_size_pr" />

    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:background="@drawable/gradient"
        android:layout_height="1dp"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></View>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_pr"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout3"
        android:orientation="horizontal"
        android:showDividers="beginning"
        android:layout_marginTop="@dimen/layout_top_pr">

        <TextView
            android:id="@+id/txt_label_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/textpr_margin_left"
            android:layout_marginTop="@dimen/textpr_margin_top"
            android:text="@string/height_user"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000"
            android:textSize="@dimen/text_size_pr" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/txtHeight"
            android:layout_marginLeft="@dimen/text_left_data"
            android:layout_marginTop="@dimen/textpr_margin_top"
            android:textSize="@dimen/text_size_pr" />


    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:background="@drawable/gradient"
        android:layout_height="1dp"
        android:layout_below="@+id/linearLayout5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></View>

    <LinearLayout
        android:id="@+id/LinearLayout6"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_pr"
        android:layout_below="@+id/linearLayout5"
        android:orientation="horizontal"
        android:showDividers="beginning"
        android:layout_marginTop="@dimen/layout_top_pr"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/txtConfig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/textpr_margin_left"
            android:layout_marginTop="@dimen/textpr_margin_top"
            android:text="@string/configuration"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000"
            android:textSize="@dimen/text_size_pr" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="profileConfig"
            android:src="@drawable/ic_config"
            android:layout_marginTop="@dimen/image_top"
            android:layout_marginLeft="@dimen/image_margin" />

    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/greenDark"
        android:text="@string/user_features_btnsave"
        android:onClick="saveInfo"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_button"
        android:layout_marginLeft="@dimen/button_padding"
        android:layout_marginRight="@dimen/button_padding" />

</RelativeLayout>
